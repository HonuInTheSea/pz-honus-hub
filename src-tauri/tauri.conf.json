{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pz-honus-hub",
  "version": "0.4.1",
  "identifier": "com.honuinthesea.pz-honus-hub",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/pz-honus-hub/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Honu's Project Zomboid Hub",
        "maximized": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
